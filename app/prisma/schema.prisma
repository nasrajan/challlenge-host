datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ORGANIZER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For Credentials provider
  role          UserRole  @default(USER)
  accounts      Account[]
  sessions      Session[]
  
  organizedChallenges Challenge[] @relation("OrganizedChallenges")
  participations      Participant[]
  activityLogs        ActivityLog[]
  scoreSnapshots      ScoreSnapshot[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id          String   @id @default(cuid()) // Persistence for password reset
  identifier  String
  token       String   @unique
  expires     DateTime
  createdAt   DateTime @default(now())

  @@unique([identifier, token])
}

enum ChallengeStatus {
  UPCOMING
  ACTIVE
  COMPLETED
  CANCELLED
}

enum AggregationMethod {
  SUM
  COUNT
  MAX
  MIN
  AVERAGE
}

enum ScoringFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

enum ComparisonType {
  RANGE
  GREATER_THAN
  GREATER_THAN_EQUAL
}

model Challenge {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  startDate   DateTime
  endDate     DateTime
  status      ChallengeStatus @default(UPCOMING)
  
  organizerId String
  organizer   User      @relation("OrganizedChallenges", fields: [organizerId], references: [id])
  
  isPublic    Boolean   @default(true)
  maxParticipants Int?
  requiresApproval Boolean @default(false)
  showLeaderboard Boolean @default(true)

  // Relations
  metrics      ChallengeMetric[]
  participants Participant[]
  activityLogs ActivityLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChallengeMetric {
  id                String            @id @default(cuid())
  challengeId       String
  challenge         Challenge         @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  
  name              String            // e.g. "Steps", "Workout"
  unit              String            // e.g. "steps", "minutes"
  aggregationMethod AggregationMethod @default(SUM)
  scoringFrequency  ScoringFrequency  @default(DAILY)
  
  maxPointsPerPeriod Float?
  maxPointsTotal     Float?

  qualifiers   MetricQualifier[]
  scoringRules ScoringRule[]
  activityLogs ActivityLog[]
  scoreSnapshots ScoreSnapshot[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MetricQualifier {
  id        String          @id @default(cuid())
  metricId  String
  metric    ChallengeMetric @relation(fields: [metricId], references: [id], onDelete: Cascade)
  
  value     String          // e.g. "WALK", "RUN", "INDOOR"
  
  scoringRules ScoringRule[]
  activityLogs ActivityLog[]

  @@unique([metricId, value])
}

model ScoringRule {
  id          String          @id @default(cuid())
  metricId    String
  metric      ChallengeMetric @relation(fields: [metricId], references: [id], onDelete: Cascade)
  
  qualifierId String?
  qualifier   MetricQualifier? @relation(fields: [qualifierId], references: [id])
  
  comparisonType ComparisonType @default(RANGE)
  minValue       Float?
  maxValue       Float? // used for RANGE
  points         Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ParticipantStatus {
  PENDING
  APPROVED
  REJECTED
  REVOKED
}

model Participant {
  id          String    @id @default(cuid())
  userId      String
  challengeId String
  joinedAt    DateTime  @default(now())
  status      ParticipantStatus @default(PENDING)
  
  user        User      @relation(fields: [userId], references: [id])
  challenge   Challenge @relation(fields: [challengeId], references: [id])

  @@unique([userId, challengeId])
}

model ActivityLog {
  id          String    @id @default(cuid())
  userId      String
  challengeId String
  metricId    String
  qualifierId String?
  
  date        DateTime
  value       Float
  evidenceUrl String?
  notes       String?

  user        User            @relation(fields: [userId], references: [id])
  challenge   Challenge       @relation(fields: [challengeId], references: [id])
  metric      ChallengeMetric @relation(fields: [metricId], references: [id])
  qualifier   MetricQualifier? @relation(fields: [qualifierId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, challengeId, metricId])
}

model ScoreSnapshot {
  id          String    @id @default(cuid())
  userId      String
  challengeId String
  metricId    String
  
  periodStart DateTime
  periodEnd   DateTime
  
  rawPoints     Float
  cappedPoints  Float
  totalPoints   Float // Cumulative points up to this snapshot for the user/metric

  user        User            @relation(fields: [userId], references: [id])
  metric      ChallengeMetric @relation(fields: [metricId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, challengeId, metricId])
}
